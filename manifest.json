{
  "name": "Time Saver",
  "description": "Chrome extension for saving text simply and easily.",
  "author": "nibab-boo",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "commands": {
      "copy": {
         "suggested_key": "Ctrl+Shift+E",
         "description": "Copy highlighted"
      }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/foreground.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/clipper.png"
  },
  "icons": {
    "16": "images/clipper.png",
    "32": "images/clipper.png",
    "48": "images/clipper.png",
    "128": "images/clipper.png"
  },
  "host_permissions": [
    "http://*/*", "https://*/*"
  ]
}